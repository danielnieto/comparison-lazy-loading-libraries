<xmp>
    <script src="javascripts/lozad.min.js"></script>
    <img data-src="path/to/image.jpg" class="lozad" />

    <script>
        const observer = lozad('.lozad', {
            rootMargin: '10px 0px',
            threshold: 0.1
        });
        observer.observe();
    </script>

</xmp>

{{#each images}}
<img data-src="{{this}}" class="lozad" />
{{/each}}

<script src="javascripts/lozad.min.js"></script>
<script>
    const observer = lozad('.lozad',{
            rootMargin: '10px 0px',
            threshold: 0.1
        });
    observer.observe();
</script>